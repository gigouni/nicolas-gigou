{
  "name": "nicolasgigou-server",
  "version": "1.0.0",
  "description": "GraphQL server for the nicolasgigou.fr website",
  "main": "src/api/index.mjs",
  "scripts": {
    "start": "node --experimental-modules src/api/index.mjs | bunyan -o short",
    "dev": "nodemon --experimental-modules src/api/index.mjs --watch src --watch config --ext js,mjs,graphql | bunyan -o short",
    "lint": "eslint . --ext js,mjs --fix",
    "prepush": "npm run lint",
    "jsdoc": "echo '--> Need to fix issue with .mjs extension...\n' && jsdoc -c jsdocConfig.json",
    "docker:build": "docker build --tag gigouni:nicolasgigouserver .",
    "docker:run": "docker run -i -t gigouni:nicolasgigouserver npm start",
    "docker:startDb": "docker run --name nicolasgigou-server-postgres -p 5432:5432 -e 'POSTGRES_USER=nicolasgigou-server' -e 'POSTGRES_PASSWORD=mysecretpassword' -e 'POSTGRES_DB=nicolasgigou-server-db' -d postgres:11.1-alpine",
    "docker:startPgAdmin": "docker run --name nicolasgigou-server-pgadmin -p 8003:80 -e 'PGADMIN_DEFAULT_EMAIL=root@dev.com' -e 'PGADMIN_DEFAULT_PASSWORD=mysecretpassword' -d dpage/pgadmin4"
  },
  "keywords": [
    "GraphQL",
    "Express",
    "Apollo",
    "Bunyan",
    "ESLint",
    "Nodemon",
    "JSDoc",
    "Postgres"
  ],
  "author": "Nicolas GIGOU <nicolas.gigou@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.2.2",
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "pg-promise": "^8.5.2"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "husky": "0.14.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "nodemon": "^1.18.6"
  }
}
